    <front>
      <pb n="np" xml:id="p5" facs="https://gallica.bnf.fr/ark:/12148/bpt6k62219294/f5"/>
      <titlePage>
        <docTitle>
          <titlePart>MERCURE GALANT Dédié A <persName key="louis_grand_dauphin" role="destinataire"
              >Monseigneur LE DAUPHIN</persName>, <date when="1680-09">septembre 1680</date>.
            SECONDE PARTIE. Contenant le Voyage que le <persName key="louisxiv">Roy</persName> a
            fait en <placeName key="flandre">Flandre</placeName> en l’année <date when="1680"
              >1680</date>.</titlePart>
        </docTitle>
        <docDate>
          <date when="1680">1680</date>
        </docDate>
